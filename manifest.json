{
  "manifest_version": 3,
  "name": "Axon AI Context Manager",
  "version": "1.0.0",
  "description": "Summarize long AI conversations with one click using Google Gemini.",
  "permissions": [
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://axon-extension.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
      ],
      "css": ["content_scripts/styles.css"],
      "js": [
        "lib/gpt-tokenizer.js",
        "content_scripts/chatgpt_tracker.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
